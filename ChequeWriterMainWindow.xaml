<Window
    x:Class="ChequeWriter.ChequeWriterMainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChequeWriter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Title="Cheque Writer"
    Width="900"
    Height="600"
    mc:Ignorable="d"
    WindowState="Maximized">

    <Grid>
        <ContentControl prism:RegionManager.RegionName="UserContentRegion"/>
        <ContentControl prism:RegionManager.RegionName="NotificationContentRegion" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Width="300"
                        Height="100"/>
    </Grid>
</Window>
