<UserControl
    x:Class="ChequeWriter.Modules.ChequeModule.Views.ChequeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChequeWriter.Modules.ChequeModule.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources;component/Styles/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource Secondary}">
        
        <Button
            Grid.Column="0"
            Command="{Binding NavigateBack}"
            Style="{StaticResource BackImageButtonStyle}" />

        <StackPanel Grid.Column="2" Grid.Row="4" HorizontalAlignment="Left">
            <Button Width="101" Height="39" >Save</Button>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="4" HorizontalAlignment="Right">
            <Button Width="101" Height="39" >Cancel</Button>
        </StackPanel>
        
        <StackPanel Grid.Column="2" Grid.Row="2">
            <StackPanel>
                <Label
                    Content="Payee's name:" 
                    HorizontalAlignment="Left" />
                <TextBox/>
            </StackPanel>
            <Border Height="15"/>
            
            <StackPanel>
                <Label
                    Content="Amount (numbers):"
                    HorizontalAlignment="Left" />
                <TextBox/>
            </StackPanel>
            <Border Height="15"/>
            
            <StackPanel>
                <Label
                    Content="Date:" 
                    HorizontalAlignment="Left" />
                <TextBox/>
            </StackPanel>
            <Border Height="15"/>
            
            <StackPanel>
                <Label
                    Content="Drawer:" 
                    HorizontalAlignment="Left" />
                <TextBox/>
            </StackPanel>
        </StackPanel>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="17*" />
            <RowDefinition Height="331*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="177*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="199*"/>
        </Grid.ColumnDefinitions>
        
    </Grid>
</UserControl>
