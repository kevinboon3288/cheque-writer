<UserControl
    x:Class="ChequeWriter.Modules.ChequeModule.Views.ChequeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChequeWriter.Modules.ChequeModule.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Window
        WindowStyle="None"
        WindowState="Maximized"/>


    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources;component/Styles/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource Secondary}">

        <Button
            Command="{Binding NavigateBack}"
            Style="{StaticResource BackImageButtonStyle}" HorizontalAlignment="Center" Width="50" />

        <StackPanel Grid.Column="2" Grid.Row="4">
            <Button Width="101" Height="39" HorizontalAlignment="Left" >Save</Button>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="4">
            <Button Width="101" Height="39" HorizontalAlignment="Right" >Cancel</Button>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="1" Margin="0,15,0,0" Grid.RowSpan="2">
            <StackPanel>
                <Label
                    Content="Payee's name:" 
                    HorizontalAlignment="Left" />
                <TextBox/>
            </StackPanel>
            <Border Height="15"/>

            <StackPanel>
                <Label
                    Content="Amount (numbers):"
                    HorizontalAlignment="Left" />
                <TextBox/>
            </StackPanel>
            <Border Height="15"/>

            <StackPanel>
                <Label
                    Content="Date:" 
                    HorizontalAlignment="Left" />
                <TextBox/>
            </StackPanel>
            <Border Height="15"/>

            <StackPanel>
                <Label
                    Content="Drawer:" 
                    HorizontalAlignment="Left" />
                <TextBox/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="4" Grid.Row="2" VerticalAlignment="Center" Height="185">
            <StackPanel Height="185"/>
        </StackPanel>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="17*" />
            <RowDefinition Height="331*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="326*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="381*"/>
            <ColumnDefinition Width="18*"/>
        </Grid.ColumnDefinitions>

    </Grid>
</UserControl>
