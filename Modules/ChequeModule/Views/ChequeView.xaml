<UserControl
    x:Class="ChequeWriter.Modules.ChequeModule.Views.ChequeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChequeWriter.Modules.ChequeModule.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources;component/Styles/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource Secondary}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="17*" />
            <RowDefinition Height="331*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="177*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="199*"/>
        </Grid.ColumnDefinitions>
        <Label
            Grid.Column="2"
            Grid.Row="2"
            Content="Payee's name:" 
            HorizontalAlignment="Right"
            Margin="0,85,251,220"
            
        ></Label>
        <Label
            Grid.Column="2"
            Grid.Row="2"
            Content="   Amount&#x0a;(numbers):" 
            HorizontalAlignment="Right"
            Margin="0,120,251,165" Width="66"
            
        />
        <Label
            Grid.Column="2"
            Grid.Row="2"
            Content="Date:" 
            HorizontalAlignment="Left"
            Margin="66,175,0,130"
            
        />
        <Label
            Grid.Column="2"
            Grid.Row="2"
            Content="Drawer:" 
            HorizontalAlignment="Left"
            Margin="53,220,0,85"
            
        />
        <TextBox
            Grid.Column="2"
            Grid.Row="2" 
            Margin="108,85,20,220"
            
        />
        <TextBox
            Grid.Column="2"
            Grid.Row="2" 
            Margin="108,130,20,175"
            
        />
        <TextBox
            Grid.Column="2"
            Grid.Row="2" 
            Margin="108,175,20,130"
            
        />
        <TextBox
            Grid.Column="2"
            Grid.Row="2" 
            Margin="108,220,20,85"
            
        />
        <Button
            Grid.Column="0"
            Command="{Binding NavigateBack}"
            Style="{StaticResource BackImageButtonStyle}" />
        <Button
            Grid.Column="2"
            Grid.Row="4" 
            Margin="10,0,194,0" >Save</Button>
        <Button
            Grid.Column="2"
            Grid.Row="4" 
            Margin="194,0,10,0" >Cancel</Button>


    </Grid>
</UserControl>
